#!/usr/bin/env bash

# Make vim the default editor.
export EDITOR='vim';


# Make Python use UTF-8 encoding for output to stdin, stdout, and stderr.
export PYTHONIOENCODING='UTF-8';

# Increase Bash history size. Allow 32³ entries; the default is 500.
export HISTSIZE='32768';
export HISTFILESIZE="${HISTSIZE}";
# Omit duplicates and commands that begin with a space from history.
export HISTCONTROL='ignoreboth';

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';

# Highlight section titles in manual pages.
export LESS_TERMCAP_md="${yellow}";

# Don’t clear the screen after quitting a manual page.
export MANPAGER='less -X';

#java home
export JAVA_HOME=$(/usr/libexec/java_home)
export PATH=/Library/Java/JavaVirtualMachines/jdk1.8.0_291.jdk/Contents/Home:$PATH

# path
export PATH=/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin:$PATH

# maven
export M2_HOME=/Users/pradeepagarwal/Applications/apache-maven-3.8.1/bin
export PATH=$HOME/Applications/apache-maven-3.8.1/bin:$PATH

#mysql
export PATH="/usr/local/opt/mysql-client@5.7/bin:$PATH"

# For compilers to find zlib you may need to set:
export LDFLAGS="-L/usr/local/opt/zlib/lib -L/usr/local/opt/sqlite/lib  -L/usr/local/opt/bzip2/lib -L/usr/local/opt/mysql-client@5.7/lib"
export CPPFLAGS="-I/usr/local/opt/zlib/include -I/usr/local/opt/sqlite/include -I/usr/local/opt/bzip2/include -I/usr/local/opt/mysql-client@5.7/include"
export LIBRARY_PATH="$LIBRARY_PATH:/usr/local/opt/openssl/lib/"

export GPG_TTY=$(tty)
